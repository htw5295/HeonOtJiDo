<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true"
    android:paddingLeft="18dp"
    android:paddingTop="20dp"
    android:paddingRight="18dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/drawer_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp">

        <TextView
            android:id="@+id/drawer_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pen"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:text="헌옷 지도"
            android:textColor="@color/colorPrimary"
            android:textSize="33sp"/>

        <ImageButton
            android:id="@+id/toolbar_menu_imageButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/close"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/drawer_account_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/drawer_group_background"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/drawer_top_layout">

        <TextView
            android:id="@+id/drawer_nameTitle_textView"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:fontFamily="@font/gothic"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:text="이름"
            android:textColor="#9a9a9a"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/drawer_nameContent_textView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/drawer_nameContent_textView"
            app:layout_constraintTop_toTopOf="@id/drawer_nameContent_textView" />

        <TextView
            android:id="@+id/drawer_nameContent_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/gothic"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:text="-"
            android:textColor="#363636"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/drawer_nameTitle_textView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/drawer_roleTitle_textView"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gothic_bold"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:text="이메일"
            android:textColor="#9a9a9a"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="@id/drawer_roleContent_textView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/drawer_roleContent_textView"
            app:layout_constraintTop_toTopOf="@id/drawer_roleContent_textView" />

        <TextView
            android:id="@+id/drawer_roleContent_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gothic_bold"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:text="-"
            android:textColor="#363636"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/drawer_roleTitle_textView"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/drawer_nameContent_textView" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/drawer_question_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/drawer_group_background"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@id/drawer_logout_layout">

        <Button
            android:id="@+id/drawer_question_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/drawer_question_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/pen"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:text="앱 건의하기"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/drawer_question_imageView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/drawer_question_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_dialog_email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/drawer_logout_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@drawable/drawer_group_background"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/drawer_logout_button"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/drawer_logout_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/pen"
            android:gravity="center_vertical"
            android:letterSpacing="0.03"
            android:text="로그아웃"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@id/drawer_logout_imageView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/drawer_logout_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_set_as"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>